#include <stdio.h>

int main() {
    int t1, t2, t3;
    float total_time;

//вводимо значення часів t1, t2, t3
    printf("Введіть три значення:");
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислюємо загальний час у годинах
    total_time = (float)(1 / (1.0/t1 + 1.0/t2 + 1.0/t3));

    // Виводимо загальний час з округленням до 2 знаків після коми
    printf("Час, необхідний для з'їдання пирога: %.2f годин\n", total_time);

    return 0;
}

#include <stdio.h>

int main() {
    int t1, t2, t3;
    double total_time;

    // Вводимо значення часів t1, t2, t3
    printf("Введіть часи t1, t2, t3 через пробіл: ");
    scanf("%d %d %d", &t1, &t2, &t3);

    // Обчислюємо загальний час у годинах
    total_time = (double)(t1 + t2 + t3);

    // Виводимо загальний час з округленням до 2 знаків після коми
    printf("Загальний час: %.2f год\n", total_time);

    return 0;
}
